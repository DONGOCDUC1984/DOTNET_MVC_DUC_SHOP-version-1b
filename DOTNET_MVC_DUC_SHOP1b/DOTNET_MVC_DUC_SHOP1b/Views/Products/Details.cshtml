@model DOTNET_MVC_DUC_SHOP1b.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
           $ @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
           <img decoding="async" src="@("~/image/"+Model.ImageName)" asp-append-version="true" width="250px" height="300px"/>
        </dd>
    </dl>
</div>
<div>
   @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary my-2"> <i class="fa-solid fa-pencil"></i> Edit</a> 
        <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger my-2"> <i class="fa-solid fa-trash"></i> Delete</a>
    }
    <a asp-action="Index" class="btn btn-primary my-2">Back to List</a> 
</div>
